            align-items: center;
            justify-content: center;
            padding: 1rem 2.5rem;
            border-radius: 0;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            margin: 0.5rem;
            gap: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .btn-primary {
            background-color: var(--primary);
            color: white;
            border: 2px solid var(--primary);
        }
        
        .btn-primary:hover {
            background-color: transparent;
            color: var(--primary);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(139, 69, 19, 0.3);
        }
        
        .btn-accent {
            background-color: var(--accent);
            color: var(--dark);
            border: 2px solid var(--accent);
        }
        
        .btn-accent:hover {
            background-color: transparent;
            color: var(--accent);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(222, 184, 135, 0.3);
        }
        
        .btn-whatsapp {
            background-color: #25D366;
            color: white;
            border: 2px solid #25D366;
        }
        
        .btn-whatsapp:hover {
            background-color: transparent;
            color: #25D366;
            transform: translateY(-3px);
        }
        
        /* Secciones */
        .section {
            padding: 6rem 0;
        }
        
        .section-title {
            text-align: center;
            margin-bottom: 5rem;
        }
        
        .section-title h2 {
            font-size: 2.8rem;
            position: relative;
            display: inline-block;
            padding-bottom: 20px;
            color: var(--dark);
        }
        
        .section-title h2:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: var(--primary);
        }
        
        .section-title p {
            font-size: 1.3rem;
            color: var(--secondary);
            max-width: 700px;
            margin: 1.5rem auto 0;
            font-style: italic;
        }
        
        /* Misión, Visión, Valores */
        .mv-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 3rem;
        }
        
        .mv-card {
            background-color: white;
            padding: 3rem 2.5rem;
            text-align: center;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
            transition: transform 0.4s ease;
            border-top: 5px solid var(--primary);
        }
        
        .mv-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
        }
        
        .mv-icon {
            font-size: 3.5rem;
            color: var(--primary);
            margin-bottom: 2rem;
        }
        
        .mv-card h3 {
            color: var(--dark);
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            letter-spacing: 1px;
        }
        
        /* Servicios */
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2.5rem;
        }
        
        .service-card {
            background-color: white;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: all 0.4s ease;
            position: relative;
        }
        
        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        
        .service-img {
            height: 250px;
            background-color: var(--light);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .service-img i {
            font-size: 6rem;
            color: var(--primary);
            opacity: 0.8;
        }
        
        .service-content {
            padding: 2.5rem;
            text-align: center;
        }
        
        .service-content h3 {
            color: var(--dark);
            font-size: 1.6rem;
            margin-bottom: 1.2rem;
        }
        
        .service-price {
            color: var(--primary);
            font-size: 1.8rem;
            font-weight: 700;
            margin-top: 1.5rem;
            font-family: 'Playfair Display', serif;
        }
        
        /* Contacto */
        .contact-section {
            background-color: var(--dark);
            color: white;
        }
        
        .contact-section .section-title h2 {
            color: var(--accent);
        }
        
        .contact-section .section-title p {
            color: var(--gold);
        }
        
        .contact-container {
