            background-position: center;
            color: white;
            padding: 12rem 0 8rem;
            text-align: center;
            margin-top: 80px;
        }
        
        .hero-content {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .hero h1 {
            font-size: 3.8rem;
            margin-bottom: 1rem;
            color: var(--accent);
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            letter-spacing: 1px;
        }
        
        .hero-subtitle {
            font-size: 2rem;
            margin-bottom: 2rem;
            color: white;
            font-weight: 300;
        }
        
        .divider {
            width: 100px;
            height: 3px;
            background-color: var(--accent);
            margin: 2rem auto;
        }
        
        .contact-highlight {
            background-color: rgba(222, 184, 135, 0.15);
            border-left: 4px solid var(--accent);
            padding: 2rem;
            margin: 3rem 0;
            text-align: left;
            border-radius: 0 10px 10px 0;
            border-right: 1px solid rgba(222, 184, 135, 0.3);
        }
        
        .contact-highlight p {
            margin-bottom: 0.8rem;
            font-size: 1.2rem;
        }
        
        .contact-highlight i {
            color: var(--accent);
            margin-right: 15px;
            width: 25px;
            text-align: center;
        }
        
        /* Botones */
        .btn {
