        :root {
            --primary: #8B4513; /* Marrón madera */
            --secondary: #D2691E; /* Chocolate */
            --accent: #DEB887; /* Madera clara */
            --light: #FAF3E0; /* Beige claro */
            --dark: #2C1810; /* Marrón oscuro */
            --gold: #C5A572; /* Dorado elegante */
        }
        
        * {
